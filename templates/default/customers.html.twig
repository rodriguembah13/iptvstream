{% extends 'base.html.twig' %}
{% block title %}
    Customers
{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="card">
            <div class="card-header">
                <h4>Customers</h4>
                <div class="row  float-end">
                    <div class="btn-group-sm">
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div id="customers">{{ 'loading'|trans({}, 'messages') }}</div>
            </div>
        </div>
    </div>
{% endblock %}


{% block javascripts %}
    {{ parent() }}
    <script>
        $(function () {
            $('#customers').initDataTables({{ datatable_settings(datatable) }});
        });

    </script>
{% endblock %}
